<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Reg_fragments.PatientSignup"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:text="Patient Profile "
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="25dp"
            android:background="#29b6f6"
            android:layout_marginBottom="50dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/pNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:hint="Name"
                android:layout_marginLeft="5dp"/>

        </android.support.design.widget.TextInputLayout>




        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pAgeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:hint="Age"
                android:inputType="numberDecimal"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/fatherNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Father Name"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/motherNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mother Name"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Blood Group : "/>
            <Spinner
                android:id="@+id/bloodGroupSp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:entries="@array/blood_groups"
                android:padding="5dp">
            </Spinner>
        </LinearLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pWeghitET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:hint="Weight"
                android:layout_marginLeft="5dp"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/gText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"/>

            <RadioGroup
                android:id="@+id/pGenderRG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:layout_alignLeft="@+id/gText1">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/radioButton1"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="16dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/radioButton2"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="16dp"
                    android:layout_marginLeft="40dp"/>
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Present Address"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/holo_purple"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black_overlay"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/presentHouseNoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="House Number"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/presentRoadNoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Road Number"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/presentVillageET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Village"
                android:textColorHint="@android:color/holo_purple" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/presentThanaET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thana"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/presentZilaET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Zila"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/presentPostNoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Post Number"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/presentDivisionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Division"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permanant Address"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/holo_purple"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black_overlay"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/permanantHouseNoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="House Number"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/permanantRoadNoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Road Number"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/permanantVillageET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Village"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/permanantThanaET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thana"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/permanantZilaET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Zila"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/permanantPostNoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Post Number"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/permanantDivisionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Division"
                android:textColorHint="@android:color/holo_purple"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/nextBT"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="16dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>